@model IEnumerable<App.Entities.Requisition>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>
<div class="row">
    <div class="container">
        <a href="@Url.Action("Add", "Requisition")" class="btn-sm btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> Add new requisition</a>
    </div>
</div>
<table style="margin-top:20px;" class="table table-striped">
    <tr>
        <th>
            No. Requisition
        </th>
        <th>
            Department
        </th>
        <th>
            Supplier
        </th>
        <th>
            Status
        </th>
        <th>
            Lines
        </th>
        <th>
            Total
        </th>
        <th>
            Requisition Date
        </th>
        <th>
            Delivery Date
        </th>
        <th>
            Priority
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalLines)
        </td>
        <td>
            $ @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @item.RequisitionDate.ToShortDateString()
        </td>
        <td>
            @item.DeliveryDate.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority.Name)
        </td>
        <td>
            <a href="@Url.Action("Details", "Requisition", new { id = item.Id })"><span class="glyphicon glyphicon-list-alt"></span></a>
        </td>
    </tr>
}
</table>
