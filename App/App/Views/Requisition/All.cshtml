@model IEnumerable<App.Entities.Requisicion>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>
<div class="row">
    <div class="container">
        <a href="@Url.Action("Add", "Requisition")" class="btn-sm btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> Crear nueva requisicion</a>
    </div>
</div>
<table style="margin-top:20px;" class="table table-striped">
    <tr>
        <th>
            No Requisicion
        </th>
        <th>
            Departamento
        </th>
        <th>
            Proveedor
        </th>
        <th>
            Estatus
        </th>
        <th>
            Lineas
        </th>
        <th>
            Total
        </th>
        <th>
            Fecha Requisicion
        </th>
        <th>
            Fecha Entrega
        </th>
        <th>
            Prioridad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalLineas)
        </td>
        <td>
            $ @Html.DisplayFor(modelItem => item.GranTotal)
        </td>
        <td>
            @item.FechaRequisicion.ToShortDateString()
        </td>
        <td>
            @item.FechaEntrega.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrioridadId)
        </td>
        <td>
            <a href="@Url.Action("Details", "Requisition", new { id = item.Id })"><span class="glyphicon glyphicon-list-alt"></span></a>
        </td>
    </tr>
}
</table>
